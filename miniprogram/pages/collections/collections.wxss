.page_top{height: 100rpx;width: 100%;line-height: 100rpx;text-align: center;background: #b47af5;color: #fff}
.item{height:150rpx;width: 95%;margin: 10rpx auto;display: flex;flex-direction: row;background: #a293b4;border-radius: 20rpx;box-shadow: 0rpx 0rpx 50rpx #a293b0 inset}
.item>.item_info{height: 150rpx;width: 70%;color: #fff;font-size: 25rpx;}
.item>.item_info>.item_name{height: 70rpx;width: 100%;line-height: 70rpx;text-indent: 2em;margin-top: 5rpx;}
.item>.item_info>.item_time{height: 70rpx;width: 100%;line-height: 70rpx;text-indent: 2em;margin-top: 5rpx}
.item>.item_option{height:150rpx;width: 30%;text-align: center;line-height:150rpx;text-indent: 1em;}
.tips{width: 100%;height: 200rpx;line-height: 200rpx;text-align: center;color: #ccc;font-size: 30rpx;}