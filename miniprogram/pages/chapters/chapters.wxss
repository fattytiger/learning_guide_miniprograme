/* miniprogram/pages/chapters/chapters.wxss */
.title{background: #ccc;margin: 20rpx;height: 400rpx;display: flex; flex-direction: row;border-radius: 10rpx}
.title::before{content: "";display: block;height: 1rpx;}
.title>.icon{width: 300rpx;height: 300rpx;margin: 50rpx 20rpx;}
.title>.icon image{width: 300rpx;height: 300rpx;border-radius: 50%}
.title>.desc{width: 340rpx;height: 340rpx;margin: 30rpx 0;display: flex;flex-direction: column}
.title>.desc>.desc_title{height: 60rpx;margin: 10rpx 10rpx;background: #fff; text-align: center;border-radius: 10rpx;}
.title>.desc>.desc_title text{line-height: 60rpx;font-size: 40rpx;}
.title>.desc>.desc_content{ height: 200rpx;margin: 30rpx 10rpx;}
.title>.desc>.desc_content text{display: inline-block; line-height: 40rpx;font-size: 25rpx;color: #fff;text-indent: 2em;}

.section_title{margin: 20rpx 100rpx;border-radius: 50rpx;background: #ccc;height: 80rpx;text-align: center}
.section_title::before{content: "";display: block;height: 1rpx;}
.section_title::after{content: "";display: block;height: 1rpx;}
.section_title text{font-size: 30rpx;line-height: 80rpx;}

.skill{background: #ccc;margin: 20rpx; border-radius: 10rpx;}
.skill::before{content: "";display: block;height: 1rpx;}
.skill::after{content: "";display: block;height: 1rpx;}


.skill>.item{height: 200rpx;background: #fff;margin:20rpx;border-radius: 10rpx;}
.skill>.item::before{content: "";display: block;height: 1px}
.skill>.item>.name{height: 110rpx;margin: 10rpx;display: flex;flex-direction: row}
.skill>.item>.name>.btn_into button{margin-top: 15rpx;background: orange;margin-right: 20rpx}
.skill>.item>.name>.name_title{width: 600rpx; height: 60rpx;margin: 25rpx 0 25rpx 25rpx;text-align: left;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.skill>.item>.name>.name_title text{line-height: 60rpx; font-size: 36rpx;}
.skill>.item>.gress{height: 60rpx;margin: 10rpx;display: flex;flex-direction: row;}
.skill>.item>.gress>.gress_num{height: 50rpx;background: #fff;margin: 5rpx;width: 150rpx;font-size: 25rpx;text-align: center;}
.skill>.item>.gress>.gress_num>text{line-height: 50rpx;}
.skill>.item>.gress>.gress_pic{height: 50rpx;background: #fff;margin: 5rpx 5rpx 5rpx 10rpx;width: 450rpx;}
.skill>.item>.gress>.gress_pic progress{margin: 10rpx 0;}