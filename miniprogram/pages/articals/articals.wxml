<!--miniprogram/pages/articals/articals.wxml-->
<template name="first_template">
  <view class='page'>

    <view class='first_page'>
      <view class='title'>
        {{mini_section_name}}
      </view>
      <view class='container'>
        <block wx:for="{{data.content}}" wx:key="{{index}}">
          <view wx:if="{{item.font!='null'}}" class='content'>{{item.font}}</view>
          <image wx:if="{{item.image}}" src='{{item.image}}'></image>
        </block>
      </view>
    </view>
    <view>
      <button wx:if="{{flag}}" type='primary' bindtap='read'>{{flag_text}}</button>
      <button wx:elif="{{!flag}}" type='primary' bindtap='read'>{{flag_text}}</button>
    </view>
  </view>
</template>

